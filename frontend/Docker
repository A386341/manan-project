# Stage 1: Build the React application
FROM node:18-alpine AS build
WORKDIR /app

# Copy dependency files first for better caching
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Set environment variables for the build process (React needs these at build time)
RUN echo "REACT_APP_LINK_SERVICE_URL=http://localhost:3000" > .env && \
    echo "REACT_APP_ANALYTICS_SERVICE_URL=http://localhost:4000" >> .env

RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine
# Copy the built assets from the build stage
COPY --from=build /app/build /usr/share/nginx/html
# Copy your custom nginx config (Required for React Router/SPA functionality)
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
