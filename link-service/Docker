# Use a specific working directory
WORKDIR /app

# Copy requirements first (for caching)
COPY requirements.txt .
RUN pip install -r requirements.txt

# Copy the REST of the code from the current folder (.) 
# into the WORKDIR (.)
COPY . .

# Check if app.py exists during build (optional debug step)
RUN ls -la /app

EXPOSE 3000
CMD ["python", "app.py"]
